    public double[] Task_2_1(double[] array)
    {
        // code here
        double min = 92834798237;
        int min_i = 91;
        for (int i = 0; i < array.Length; i ++)
        {
            if (min > array[i])
            {
                min_i = i;
                min = array[i];
            }
        }
        array[min_i] = array[min_i] * 2;
        // end
        return array;
    }
    public double Task_2_2(double[] array)
    {
        double sum = 0;

        // code here
        double max = -10000;
        int max_i = -1;
        for (int i = 0; i < array.Length; i++)
        {
            if ((double)array[i] > max)
            {
                max_i = i;
                max = array[i];
            }
        }
        for (int i = 0; i < max_i; i++)
        {
            sum += array[i] ;
        }
            // end

        return sum;
    }
    public double[] Task_2_3(double[] array)
    {
        double min = 984092384020;
        int min_i = -1;
        for (int i = 0; i < array.Length; i++)
        {
            if ((double)array[i] < min)
            {
                min_i = i;
                min = array[i];
            }
        
        }
        Console.WriteLine(min_i);
        for (int i = 0; i < min_i; i++)
        {
            if (array[i] > 0) array[i] = array[i] * 2;
            else array[i] = array[i] / 2;

        }
        return array;
    }
    public double[] Task_2_4(double[] array)
    {
        // code here
        double sum = 0, sr =  0, max = -100000;
        int max_i = -1;
        for (int i = 0; i < array.Length; i++)
        {
            sum += array[i];
            if (max < array[i])
            {
                max = array[i];
                max_i = i;  
            }
        }
        sr = Math.Round(sum / array.Length,2);
        
        for (int i = max_i + 1; i < array.Length; i++) array[i] = sr;
        // end

        return array;
    }
    public double[] Task_2_5(double[] array)
    {
        // code here
        double max = -1000, min = 189479174;
        int max_i = -1, min_i = 52, minus = 0, k = 0;
        for (int i = 0; i < array.Length; i++)
        {
            if (max < array[i])
            {
                max_i = i;
                max = array[i];
            }
            if (min >array[i])
            {
                min_i = i;
                min = array[i];
            }
        }
        for (int i = min_i; i < max_i; i++) if (array[i] < 0) minus += 1;
        double[] output = new double[minus];
        for (int i = min_i + 1; i < max_i; i++) 
        {
            if (array[i] < 0)
            {
               
                output[k] = array[i];
                k += 1;
            }
        }
        return output;
    }
