        for (int i = 0; i < array.Length; i ++)
        {
            sr += array[i];
            n += 1;
        }
        sr = sr / n;
        for (int i = 0; i < array.Length; i++) if (array[i] > sr) array[i] = 0;
        // end

        return array;
    }
